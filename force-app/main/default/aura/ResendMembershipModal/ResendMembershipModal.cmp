<aura:component controller="DFJ_MembershipController">

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="isUserAdmin" type="Boolean" default="false" />
    <aura:attribute name="runProcessscriptLable" type="String" default="Ok" />
    <aura:attribute name="disableButton" type="Boolean" default="false" />
    <aura:attribute name="numberOfMembership" type="Integer" default="0" />

    <div class="slds-m-around_xx-large">
        <!--Use aura:if tag to display/hide popup based on isModalOpen value-->

        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <div class="cancleOkButton">
                    <lightning:layout multipleRows="true">
                        <lightning:layoutItem size="12" largeDeviceSize="12" mediumDeviceSize="12" smallDeviceSize="12">
                            <div class="slds-align_absolute-center slds-text-heading_medium slds-p-top_small slds-p-bottom_small">
                                <aura:if isTrue="{!v.isUserAdmin}">
                                    <p>Click ok to process {!v.numberOfMembership} membership records.</p>
                                    <aura:set attribute="else">
                                        <p>You do not have permission to proceed.</p>

                                    </aura:set>
                                </aura:if>
                            </div>
                        </lightning:layoutItem>
                    </lightning:layout>
                    <lightning:layout horizontalAlign="center">
                        <aura:if isTrue="{!v.isUserAdmin}">
                            <div align="right" class="slds-p-right_x-small">
                                <lightning:button variant="brand" label="{!v.runProcessscriptLable}" title="{!v.runProcessscriptLable}" onclick="{! c.resendWebhook }" iconName="utility:check" iconPosition="left" disabled="{!v.disableButton}" />

                            </div>
                        </aura:if>
                        <div align="left">
                            <lightning:button variant="brand" label="Cancel" title="Cancel" onclick="{! c.closeModel }" iconName="utility:close" iconPosition="left" />
                        </div>
                    </lightning:layout>
                </div>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>

        <aura:html tag="style">
            .slds-modal__container{ width: 33% !important; min-width: 25% !important;}
        </aura:html>
    </div>

</aura:component>