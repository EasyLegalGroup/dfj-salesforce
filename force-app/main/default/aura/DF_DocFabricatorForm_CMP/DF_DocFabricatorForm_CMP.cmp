<aura:component access="global">
    <aura:attribute name="docFabFormUrl" type="String" access="global" />
    <aura:attribute name="openDocFabForm" type="Boolean" access="global" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="isSpinnerOpen" type="Boolean" default="false" />

    <div>
        <!-- Changes for ticket - DIN-169 : Open record content in form. -->
        <!-- Start -->
        <!-- Description : Opening model to open docFabricator form -->

        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container">
                <aura:if isTrue="{!v.isSpinnerOpen}">
                    <div>
                        <lightning:spinner variant="brand" size="large" alternativeText="Loading" />
                    </div>
                </aura:if>
                <header>
                    <div class="slds-float_right">
                        <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }" alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
                    </div>

                </header>
                <div class="slds-modal__content slds-scrollable_none">
                    <iframe src="{!v.docFabFormUrl}" width="100%" height="700" sandbox="allow-scripts allow-same-origin allow-popups allow-forms allow-modals" scrolling="auto" />
                </div>

            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
        <!-- End -->

    </div>
    <!-- <aura:html tag="style">
        .slds-modal__container{ width: 90% !important; max-width: 90% !important;} .slds-modal__header{ display : inline !important; }
    </aura:html> -->
</aura:component>