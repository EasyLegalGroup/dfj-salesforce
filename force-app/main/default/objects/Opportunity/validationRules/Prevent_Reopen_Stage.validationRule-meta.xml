<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Reopen_Stage</fullName>
    <active>true</active>
    <description>Prevents re-opening Opportunities</description>
    <errorConditionFormula>AND(
    ISCHANGED(StageName),
    PRIORVALUE(IsClosed),
    NOT($Permission.Reopen_Closed_Opportunities)
)</errorConditionFormula>
    <errorMessage>You can’t change the stage once it’s closed.</errorMessage>
</ValidationRule>
