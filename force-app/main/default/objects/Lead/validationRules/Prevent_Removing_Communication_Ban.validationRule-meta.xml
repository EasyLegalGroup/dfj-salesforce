<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Removing_Communication_Ban</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISCHANGED(Communication_Ban__c),
  ISBLANK(Communication_Ban__c),
  NOT(ISBLANK(PRIORVALUE(Communication_Ban__c)))
)</errorConditionFormula>
    <errorDisplayField>Communication_Ban__c</errorDisplayField>
    <errorMessage>Communication Ban cannot be removed.</errorMessage>
</ValidationRule>
