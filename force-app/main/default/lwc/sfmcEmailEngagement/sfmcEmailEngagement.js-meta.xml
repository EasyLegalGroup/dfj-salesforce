<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>SFMC Email Engagement</masterLabel>
    <description>Displays Marketing Cloud email engagement metrics</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Lead</object>
                <object>Contact</object>
                <object>Account</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="testRecordId" type="String" label="Record ID" 
                     default="00QW500000Kmh5ZMAR"
                     description="The ID of the record to check for Marketing Cloud engagement"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>