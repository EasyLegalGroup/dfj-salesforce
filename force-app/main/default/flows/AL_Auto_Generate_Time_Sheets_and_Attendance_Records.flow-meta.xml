    <description>An updated, simplified version, using a standard loop and less unnecessary logic. Also no longer creates attendance records</description>
    <environments>Default</environments>
    <formulas>
        <name>frmFirstOfNextMonthNextYear</name>
        <dataType>Date</dataType>
        <expression>DATE(
  YEAR(TODAY()) +
    IF( MONTH(TODAY()) = 12, 
        2,  /* Dec → Jan next year plus one more */
        1   /* Any other month → next month, then +1 year */
    ),
  MOD( MONTH(TODAY()), 12 ) + 1,
  1
)</expression>
    </formulas>
