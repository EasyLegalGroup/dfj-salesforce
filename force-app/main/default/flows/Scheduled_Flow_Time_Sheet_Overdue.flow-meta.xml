        <rules>
            <name>Time_Sheet_is_From_Last_Month</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IsFromLastMonth</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
