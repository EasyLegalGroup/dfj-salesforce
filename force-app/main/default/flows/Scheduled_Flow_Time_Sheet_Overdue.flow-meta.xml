    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>IsFromLastMonth</name>
        <dataType>Boolean</dataType>
        <expression>AND(
  OR(
    AND(
      MONTH({!$Record.Month_Year__c}) = MONTH(TODAY()) - 1,
      YEAR({!$Record.Month_Year__c}) = YEAR(TODAY())
    ),
    AND(
      MONTH(TODAY()) = 1,
      MONTH({!$Record.Month_Year__c}) = 12,
      YEAR({!$Record.Month_Year__c}) = YEAR(TODAY()) - 1
    )
  )
)</expression>
