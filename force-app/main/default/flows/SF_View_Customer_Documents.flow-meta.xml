    <description>Allows an internal user to access the customer&apos;s documents easily through either Google Drive or the Customer facing portal. Also allows generating an OTP for the customer portal, if there isn&apos;t a valid one available.</description>
    <environments>Default</environments>
    <formulas>
        <name>frmOtpCode</name>
        <dataType>String</dataType>
        <expression>IF(NOT(ISBLANK({!AL_Set_OTP_Code_on_Journal.Results.outputOtpCode})),
    {!AL_Set_OTP_Code_on_Journal.Results.outputOtpCode},
    IF(NOT(ISBLANK({!ExistingOtpCode})),
        {!ExistingOtpCode},
        &quot;No Valid OTP Code Available&quot;
    )
)</expression>
    </formulas>
    <formulas>
        <name>frmOtpExpiry</name>
        <dataType>DateTime</dataType>
        <expression>IF(
  NOT(ISBLANK({!AL_Set_OTP_Code_on_Journal.Results.outputOtpExpiry})),
  {!AL_Set_OTP_Code_on_Journal.Results.outputOtpExpiry},
  {!ExistingOtpExpiry}
)</expression>
    </formulas>
    <formulas>
        <name>otpExpiry</name>
        <dataType>DateTime</dataType>
        <expression>IF(
  NOT(ISBLANK({!AL_Set_OTP_Code_on_Journal.Results.outputOtpExpiry})),
  {!AL_Set_OTP_Code_on_Journal.Results.outputOtpExpiry},
  {!Get_Journal.OTP_Expires__c}
)</expression>
    </formulas>
