<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Updated name formula to use AccountName if we have it, instead of HostName</description>
    <environments>Default</environments>
    <formulas>
        <name>frmName</name>
        <dataType>String</dataType>
        <expression>IF(
    NOT(ISBLANK({!$Record.Account__r.Name})),
    {!$Record.Account__r.Name},
    {!$Record.Host__r.Name}
)
&amp; &quot; - &quot; &amp;
CASE(
    LEN(TEXT(DAY(DATEVALUE({!$Record.Start__c})))), 
    1, &quot;0&quot; &amp; TEXT(DAY(DATEVALUE({!$Record.Start__c}))), 
    TEXT(DAY(DATEVALUE({!$Record.Start__c})))
)
&amp; &quot;-&quot; &amp;
CASE(
    LEN(TEXT(MONTH(DATEVALUE({!$Record.Start__c})))), 
    1, &quot;0&quot; &amp; TEXT(MONTH(DATEVALUE({!$Record.Start__c}))), 
    TEXT(MONTH(DATEVALUE({!$Record.Start__c})))
)
&amp; &quot;-&quot; &amp;
TEXT(YEAR(DATEVALUE({!$Record.Start__c})))</expression>
    </formulas>
    <interviewLabel>BS - Campaign: Start Time is Updated {!$Flow.CurrentDateTime}</interviewLabel>
    <label>BS - Campaign: Start Time is Updated</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Updates StartDate to match Start (Date/Time)</description>
        <name>Update_Campaign</name>
        <label>Update Campaign</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>frmName</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>StartDate</field>
            <value>
                <elementReference>$Record.Start__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Campaign</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Start__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Campaign</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
