<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <name>Generate_verification_code</name>
        <label>Generate verification code</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <actionName>generateVerificationCode</actionName>
        <actionType>generateVerificationCode</actionType>
        <connector>
            <targetReference>Update_Journal_ID</targetReference>
        </connector>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <nameSegment>generateVerificationCode</nameSegment>
        <offset>0</offset>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </actionCalls>
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Set_Output_Variables</name>
        <label>Set Output Variables</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>outputOtpCode</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Generate_verification_code.verificationCode</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>outputOtpExpiry</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>frmNowPlus1Minute</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>Takes an input JournalId and sets OTP Code on that Journal. The OTP Expires after 1 minute and is configured to not send a notification to the customer.</description>
    <environments>Default</environments>
    <formulas>
        <name>frmNowPlus1Minute</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE($Flow.CurrentDateTime + (1/1440))</expression>
    </formulas>
    <interviewLabel>AL - Set OTP Code on Journal {!$Flow.CurrentDateTime}</interviewLabel>
    <label>AL - Set OTP Code on Journal</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Sets OTP Code, Skip OTP Notification and OTP Expiration Date</description>
        <name>Update_Journal_ID</name>
        <label>Update Journal ID</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Set_Output_Variables</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>inputJournalId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>OTP_Code__c</field>
            <value>
                <elementReference>Generate_verification_code.verificationCode</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>OTP_Expires__c</field>
            <value>
                <elementReference>frmNowPlus1Minute</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Skip_OTP_Notification__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <object>Journal__c</object>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Generate_verification_code</targetReference>
        </connector>
