<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>When a Target is Created with Metric Capacity Booked, then it finds all matching Campaigns and relates them to the target.</description>
    <environments>Default</environments>
    <interviewLabel>RT - Capacity Target Created Updates Campaigns {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Capacity Target Created Updates Campaigns</label>
    <loops>
        <name>Loop_Campaigns</name>
        <label>Loop Campaigns</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <collectionReference>Get_Campaigns</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>AL_Create_Target_Links_from_Input_Campaign</targetReference>
        </nextValueConnector>
    </loops>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_Campaigns</name>
        <label>Get Campaigns</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Loop_Campaigns</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Market_Unit__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Market_Unit__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>Lecture__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>ISO_Week__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Week_Number__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>ISO_Year__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Year__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Scheduled</stringValue>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>Campaign</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Campaigns</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Target_Metric__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Capacity Booked</stringValue>
            </value>
        </filters>
        <object>Targets__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>AL_Create_Target_Links_from_Input_Campaign</name>
        <label>AL - Create Target Links from Input Campaign</label>
        <locationX>264</locationX>
        <locationY>539</locationY>
        <connector>
            <targetReference>Loop_Campaigns</targetReference>
        </connector>
        <flowName>AL_Create_Target_Links_from_Input_Campaign</flowName>
        <inputAssignments>
            <name>Campaign</name>
            <value>
                <elementReference>Loop_Campaigns</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
