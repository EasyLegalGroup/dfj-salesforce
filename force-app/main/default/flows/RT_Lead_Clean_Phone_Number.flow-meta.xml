<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <assignments>
        <name>Assign_Cleaned_Phone_Number</name>
        <label>Assign Cleaned Phone Number</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>$Record.Phone</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>cleanPhoneNumber</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Phone_Number</targetReference>
        </connector>
    </assignments>
    <description>Removes Unwanted Characters such as &quot;&quot;, (), in Phone Number</description>
    <environments>Default</environments>
    <formulas>
        <name>cleanPhoneNumber</name>
        <dataType>String</dataType>
        <expression>IF(
  LEFT({!HelpingCleanPhoneFormula}, 1) = &quot;+&quot;,
  IF(
    LEN({!HelpingCleanPhoneFormula}) &gt; 4,
    &quot;+&quot; &amp;
    MID({!HelpingCleanPhoneFormula}, 2, 2) &amp;
    IF(
      MID({!HelpingCleanPhoneFormula}, 4, 1) = &quot;0&quot;,
      MID({!HelpingCleanPhoneFormula}, 5, LEN({!HelpingCleanPhoneFormula})),
      MID({!HelpingCleanPhoneFormula}, 4, LEN({!HelpingCleanPhoneFormula}))
    ),
    {!HelpingCleanPhoneFormula}
  ),
  IF(
    LEFT({!HelpingCleanPhoneFormula}, 1) = &quot;0&quot;,
    MID({!HelpingCleanPhoneFormula}, 2, LEN({!HelpingCleanPhoneFormula})),
    {!HelpingCleanPhoneFormula}
  )
)</expression>
    </formulas>
    <formulas>
        <name>HelpingCleanPhoneFormula</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE(
  SUBSTITUTE(
    SUBSTITUTE(
      SUBSTITUTE(
        SUBSTITUTE(
          {!$Record.Phone}, 
          &quot;(&quot;, 
          &quot;&quot;
        ), 
        &quot;)&quot;, 
        &quot;&quot;
      ), 
      &quot;#&quot;, 
      &quot;&quot;
    ), 
    &quot;\&quot;&quot;, 
    &quot;&quot;
  ), 
  &quot; &quot;, 
  &quot;&quot;
)</expression>
    </formulas>
    <interviewLabel>RT - Lead: Remove Unwanted Characters in Phone Number {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Lead: Clean Phone Number</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Phone_Number</name>
        <label>Update Phone Number</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Phone</field>
            <value>
                <elementReference>cleanPhoneNumber</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Assign_Cleaned_Phone_Number</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Phone</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Status</field>
            <operator>NotEqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Lead</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
