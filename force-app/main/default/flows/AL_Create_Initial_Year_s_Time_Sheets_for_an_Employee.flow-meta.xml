    <decisions>
        <name>Is_Month_Offset_Less_than_14</name>
        <label>Is Month Offset Less than 14?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Create_Time_Sheets</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>14 or Greater</defaultConnectorLabel>
        <rules>
            <name>Less_than_14</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>MonthOffset</leftValueReference>
                <operator>LessThan</operator>
