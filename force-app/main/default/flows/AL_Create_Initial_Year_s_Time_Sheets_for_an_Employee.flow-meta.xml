  YEAR( ADDMONTHS({!inputEmployee.Start_Date__c}, {!MonthOffset}) ),
  MONTH( ADDMONTHS({!inputEmployee.Start_Date__c}, {!MonthOffset}) ),
  1
)</expression>
    </formulas>
