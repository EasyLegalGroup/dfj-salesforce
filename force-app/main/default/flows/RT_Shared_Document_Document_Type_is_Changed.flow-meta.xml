        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Update_Shared_Document</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Public_Registration_is_Required</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IsPublicRegistrationRequired</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Public_Document_Registrations</targetReference>
            </connector>
            <label>Public Registration is Required</label>
        </rules>
    </decisions>
    <description>When Document Type is changed, this flows re-checks if automated emails and/or public registration is required and updates the Shared Document accordingly.</description>
    <environments>Default</environments>
    <interviewLabel>RT - Shared Document: Document Type is Changed {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Shared Document: Document Type is Changed</label>
