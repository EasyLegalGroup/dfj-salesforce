    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Is_Document_Already_Approved</targetReference>
        </connector>
        <filterFormula>OR(
  AND(
    ISNEW(),
    NOT(ISPICKVAL({!$Record.Document_Type__c}, &quot;&quot;))
  ),
  AND(
    ISCHANGED({!$Record.Document_Type__c}),
    NOT(ISPICKVAL({!$Record.Document_Type__c}, &quot;&quot;))
  )
)</filterFormula>
        <object>Shared_Document__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
