        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Market_Unit__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Market_Unit__c</elementReference>
            </value>
        </filters>
        <filters>
