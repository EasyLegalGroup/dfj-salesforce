    <decisions>
        <description>Checks if the Campaign Member has a Lead on it, with the same External ID</description>
        <name>Do_We_Have_a_Matching_Lead</name>
        <label>Do We Have a Matching Lead?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Loop_Campaign_Members</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not a Lead</defaultConnectorLabel>
        <rules>
            <name>Has_Matching_Lead</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Loop_Campaign_Members.Lead.External_ID__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Loop_Campaign_Members.External_ID__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop_Campaign_Members.External_ID__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Add_Lead_ID_s_to_Collection</targetReference>
            </connector>
            <label>Has Matching Lead</label>
        </rules>
    </decisions>
