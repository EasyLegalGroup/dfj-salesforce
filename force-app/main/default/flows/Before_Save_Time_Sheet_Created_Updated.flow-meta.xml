    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Added setting of Time Sheet name</description>
    <environments>Default</environments>
    <formulas>
        <name>frmTimeSheetName</name>
        <dataType>String</dataType>
        <expression>/* Full year */
CASE(
  MONTH({!$Record.Month_Year__c}),
  1, &quot;January&quot;,
  2, &quot;February&quot;,
  3, &quot;March&quot;,
  4, &quot;April&quot;,
  5, &quot;May&quot;,
  6, &quot;June&quot;,
  7, &quot;July&quot;,
  8, &quot;August&quot;,
  9, &quot;September&quot;,
  10, &quot;October&quot;,
  11, &quot;November&quot;,
  12, &quot;December&quot;,
  &quot;&quot;
)
&amp; &quot; &quot;
&amp; TEXT(YEAR({!$Record.Month_Year__c}))</expression>
    </formulas>
    <interviewLabel>Before Save: Time Sheet Created/Updated {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Before Save: Time Sheet Created/Updated</label>
