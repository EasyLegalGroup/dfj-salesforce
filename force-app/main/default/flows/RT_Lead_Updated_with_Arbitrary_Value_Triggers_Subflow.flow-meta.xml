<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <description>For this version, we trigger the Parse Customer Profiler Information subflow to generate Customer Profiles for the Lead and update the related Form Submissions</description>
    <environments>Default</environments>
    <interviewLabel>RT - Lead: Updated with Arbitrary Value Triggers Subflow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Lead: Updated with Arbitrary Value Triggers Subflow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Form_Submissions</name>
        <label>Update Form Submissions</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <inputAssignments>
            <field>Customer_Profile__c</field>
            <value>
                <elementReference>CustomerProfile.Id</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record.Form_Submissions__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>AL_Parse_Customer_Profiler_Information</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>and</filterLogic>
        <filters>
            <field>CVR__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>65</stringValue>
            </value>
        </filters>
        <object>Lead</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>AL_Parse_Customer_Profiler_Information</name>
        <label>AL - Parse Customer Profiler Information</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <connector>
            <targetReference>Update_Form_Submissions</targetReference>
        </connector>
        <flowName>AL_Parse_Customer_Profiler_Information</flowName>
        <inputAssignments>
            <name>recordId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>CustomerProfile</assignToReference>
            <name>CustomerProfile</name>
        </outputAssignments>
    </subflows>
    <variables>
        <name>CustomerProfile</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Customer_Profile__c</objectType>
    </variables>
</Flow>
