<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <description>If a Campaign with Lecture = True and Status = Scheduled is Updated, it calls the &quot;AL - Transform Campaign to Event&quot; flow, which updates an existing Event or creates a new one, if one doesn&apos;t already exist.</description>
    <environments>Default</environments>
    <interviewLabel>RT - Campaign: Lecture Campaign Updates Sync to Event {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Campaign: Updated Lecture Campaign Syncs to Event</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>AL_Transform_Campaign_to_Event</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Lecture__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Scheduled</stringValue>
            </value>
        </filters>
        <object>Campaign</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>AL_Transform_Campaign_to_Event</name>
        <label>AL - Transform Campaign to Event</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <flowName>AL_Transform_Campaign_to_Event</flowName>
        <inputAssignments>
            <name>Campaign</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inputTrigger</name>
            <value>
                <stringValue>RT - Campaign: Updated Lecture Campaign Syncs to Event</stringValue>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
