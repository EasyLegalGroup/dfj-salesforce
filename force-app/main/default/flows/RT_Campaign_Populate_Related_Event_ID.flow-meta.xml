<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>When a Campaign is Created or Updated and Lecture = True, Related Event ID = NULL, Campaign Number != NULL and Opportunity != NULL, it sets Opportunity&apos;s auto-number &quot;Event_Tracker__C&quot; and Campaign&apos;s auto-number &quot;Campaign_Number__c&quot; in Related Event ID on Campaign</description>
    <environments>Default</environments>
    <interviewLabel>RT - Campaign: Populate Related Event ID {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Campaign: Populate Related Event ID</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Campaigns</name>
        <label>Update Campaigns</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Related_Event_ID__c</field>
            <value>
                <elementReference>ptCampaignNumber</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Campaigns</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Opportunity__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Campaign_Number__c</field>
            <operator>StartsWith</operator>
            <value>
                <stringValue>C</stringValue>
            </value>
        </filters>
        <filters>
            <field>Related_Event_ID__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Lecture__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Campaign</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
    <textTemplates>
        <name>ptCampaignNumber</name>
        <isViewedAsPlainText>true</isViewedAsPlainText>
        <text>{!$Record.Opportunity__r.Event_Tracker__c}-{!$Record.Campaign_Number__c}</text>
    </textTemplates>
</Flow>
