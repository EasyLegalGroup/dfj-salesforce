<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>frmMonthNumber</name>
        <dataType>Number</dataType>
        <expression>MONTH({!$Record.Date__c})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>frmYear</name>
        <dataType>Number</dataType>
        <expression>ISOYEAR({!$Record.Date__c})</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>RT - Attendance: Set Time Sheet {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Attendance: Set Time Sheet</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_Time_Sheet</name>
        <label>Get Time Sheet</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Update_Attendance</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Employee__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Employee__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>ISO_Year__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>frmYear</elementReference>
            </value>
        </filters>
        <filters>
            <field>Month_Number__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>frmMonthNumber</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Time_Sheet__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_Attendance</name>
        <label>Update Attendance</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>null__NotFound</field>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Time_Sheet</targetReference>
        </connector>
        <object>Attendance__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>InvalidDraft</status>
</Flow>
