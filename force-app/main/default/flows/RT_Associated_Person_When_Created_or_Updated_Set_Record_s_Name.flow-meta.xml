        <label>Custom Error Message</label>
        <locationX>50</locationX>
        <locationY>719</locationY>
        <customErrorMessages>
            <errorMessage>{!CustomError}</errorMessage>
            <isFieldError>false</isFieldError>
        </customErrorMessages>
    </customErrors>
    <decisions>
        <name>Did_We_Find_an_Existing_Primary_Person</name>
        <label>Did We Find an Existing Primary Person?</label>
        <locationX>182</locationX>
        <locationY>503</locationY>
        <defaultConnector>
            <targetReference>Do_We_Have_Birthday_But_Not_Year_of_Birth</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Primary_Person_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Primary_Persons</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Populate_Custom_Error_with_Primary_Person_Exists</targetReference>
            </connector>
            <label>Primary Person Exists</label>
        </rules>
    </decisions>
    <decisions>
        <name>Do_We_Have_Birthday_But_Not_Year_of_Birth</name>
        <label>Do We Have Birthday But Not Year of Birth?</label>
        <locationX>336</locationX>
        <locationY>1103</locationY>
        <defaultConnector>
            <targetReference>Update_Associated_Person</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Got_Birthday</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Birthday__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Year_of_Birth__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Year_of_Birth</targetReference>
            </connector>
            <label>Got Birthday</label>
        </rules>
    </decisions>
    <decisions>
        <name>Is_Person_a_Primary_Person</name>
        <label>Is Person a Primary Person?</label>
        <locationX>336</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>Do_We_Have_Birthday_But_Not_Year_of_Birth</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Primary</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Person_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Primary Person</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Primary_Persons</targetReference>
            </connector>
            <label>Is Primary</label>
        </rules>
    </decisions>
    <description>Sets name, birthday and checks that no existing Primary Person Exists</description>
    <environments>Default</environments>
    <formulas>
        <name>frmYearOfBirth</name>
        <dataType>String</dataType>
        <expression>TEXT(YEAR({!Birthday}))</expression>
    </formulas>
    <interviewLabel>RT - Associated Person: When Created or Updated, Set Record&apos;s Name {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Associated Person: Created</label>
    <processMetadataValues>
