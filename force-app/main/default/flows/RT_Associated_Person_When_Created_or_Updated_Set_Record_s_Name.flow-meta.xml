        </inputAssignments>
        <inputAssignments>
            <field>Year_of_Birth__c</field>
            <value>
                <elementReference>YearOfBirth</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
