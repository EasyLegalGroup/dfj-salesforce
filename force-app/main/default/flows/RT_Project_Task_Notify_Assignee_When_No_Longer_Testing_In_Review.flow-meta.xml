    <decisions>
        <name>Did_Task_Assignee_Make_the_Status_Change</name>
        <label>Did Task Assignee Make the Status Change?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Add_Assignees_User_ID_to_Text_Collection</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Someone Else Changed Status</defaultConnectorLabel>
        <rules>
            <name>Assignee_Changed_Status</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Assigned_To__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$User.Id</elementReference>
                </rightValue>
            </conditions>
            <label>Assignee Changed Status</label>
        </rules>
    </decisions>
    <decisions>
        <name>Is_Assignee_Connected_to_Slack</name>
        <label>Is Assignee Connected to Slack?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Assigned_is_Connected_to_Slack</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Check_If_Users_Are_Connected_to_Slack.userIdsConnectedToSlack</leftValueReference>
                <operator>IsEmpty</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Slack_Message</targetReference>
            </connector>
            <label>Assigned is Connected to Slack</label>
        </rules>
    </decisions>
    <description>When a Project Task changes status away from Testing/In Review to something else, this flows sends the Assigned To user, a Slack alert.</description>
    <environments>Default</environments>
    <interviewLabel>RT - Project Task: Notify Assignee When No Longer Testing/In Review {!$Flow.CurrentDateTime}</interviewLabel>
