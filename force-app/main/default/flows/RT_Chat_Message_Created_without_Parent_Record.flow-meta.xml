<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <decisions>
        <name>Which_Related_Record_ID_Do_We_Have</name>
        <label>Which Related Record ID Do We Have?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Got_Related_Account</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Parent_Record__c</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <stringValue>001</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Chat_Message_with_Account_Lookup</targetReference>
            </connector>
            <label>Got Related Account</label>
        </rules>
        <rules>
            <name>Got_Related_Journal</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Parent_Record__c</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <stringValue>a0A</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Chat_Message_with_Journal_Lookup</targetReference>
            </connector>
            <label>Got Related Journal</label>
        </rules>
    </decisions>
    <description>When a Chat Message is created without a Parent Record, this flow tries to match it to either a Journal or an Account and populate the lookup</description>
    <environments>Default</environments>
    <interviewLabel>RT - Chat Message: Created without Parent Record {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT - Chat Message: Created without Parent Record</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Chat_Message_with_Account_Lookup</name>
        <label>Update Chat Message with Account Lookup</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Account__c</field>
            <value>
                <elementReference>$Record.Parent_Record__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Chat_Message_with_Journal_Lookup</name>
        <label>Update Chat Message with Journal Lookup</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Journal__c</field>
            <value>
                <elementReference>$Record.Parent_Record__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Which_Related_Record_ID_Do_We_Have</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Parent_Record__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Journal__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>ChatMessage__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
