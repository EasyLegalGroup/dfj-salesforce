<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Approval_Status__c</field>
        <field>Days_Absent_Without_Pay__c</field>
        <field>Days_Absent_With_Pay__c</field>
        <field>Days_with_Child_Sick__c</field>
        <field>Days_with_Other_Absence_Reasons__c</field>
        <field>Days_with_Paid_Leave__c</field>
        <field>Days_with_Sick_Leave__c</field>
        <field>Days_with_Vacation__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Check_Approved_by_Employee</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Status_to_Pending_Manager_Approval</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Uncheck_Rejected_by_Employee</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Employee_s_Salesforce_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Employee Approval</label>
        <name>Employee_Approval</name>
        <rejectionActions>
            <action>
                <name>Check_Rejected_by_Employee</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Uncheck_Approved_by_Employee</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Check_Approved_by_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Uncheck_Rejected_by_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Employee_s_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Once an employee has approved their TIme Sheet, their Manager will need to sign off on it</description>
        <entryCriteria>
            <formula>Number_of_Corrections__c &gt; 0</formula>
        </entryCriteria>
        <label>Manager Sign-Off</label>
        <name>Manager_Sign_Off</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Alert_Employee_that_their_Manager_Rejected_their_Time_Sheet</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Check_Rejected_by_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval Process Prompts Each Employee to Approve their Own Time Sheet every month</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Notify_Employee_of_Time_Sheet_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_Timestamp</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Notify_Employee_s_Manager_of_Time_Sheet_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Rejection_Timestamp</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Notify_Employee_of_Pending_Time_Sheet_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_to_Pending_Employee_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Monthly Time Sheet Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
